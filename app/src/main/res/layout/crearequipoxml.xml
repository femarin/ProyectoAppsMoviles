<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/login_sinletras"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.curso.footballteamfinder.MainActivity">
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linv1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linv2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linv3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linv4"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linh1"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linh2"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linh3"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linh4"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linh5"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"/>
        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linh6"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nombre Equipo"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/linh1"
            app:layout_constraintLeft_toRightOf="@+id/linv1"
            android:id="@+id/nomeq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+569"
            android:textSize="18dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/linh5"
            app:layout_constraintLeft_toRightOf="@+id/linv1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="NÂº de contacto"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:inputType="phone"
            android:digits="1234567890"
            app:layout_constraintTop_toBottomOf="@id/linh5"
            app:layout_constraintLeft_toRightOf="@+id/linv25"
            android:id="@+id/numc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubc"
            android:textSize="18dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/linh2"
            app:layout_constraintLeft_toRightOf="@+id/linv1"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linh2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:id="@+id/ubx"
            app:layout_constraintLeft_toRightOf="@+id/linv25"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clc"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/linh3"
            app:layout_constraintLeft_toRightOf="@+id/linv1"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linh3"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/colx1"
            app:layout_constraintLeft_toRightOf="@+id/linv25"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:text="@string/clc2"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/linh4"
            app:layout_constraintLeft_toRightOf="@+id/linv1"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linh4"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/colx2"
            app:layout_constraintLeft_toRightOf="@+id/linv25"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linv25"
            app:layout_constraintGuide_percent="0.25"
            android:orientation="vertical" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linv35"
            app:layout_constraintGuide_percent="0.72"
            android:orientation="vertical" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botcr"
            android:text="Crear"
            app:layout_constraintTop_toBottomOf="@+id/linh6"
            app:layout_constraintLeft_toRightOf="@+id/linv3"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>